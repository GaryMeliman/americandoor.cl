<div class="container">
  <fieldset>
    <legend><%= title %> producto</legend>
    <%= form_for(@product) do |f| %>
      <% if @product.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

          <ul>
          <% @product.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="field">
        <%= f.label :name %><br>
        <%= f.text_field :name %>
      </div>
      <div class="field">
        <%= f.label :description %><br>
        <%= f.hidden_field :description %>
        <div id="epiceditor">

        </div>
      </div>
      <div class="field">
        <%= f.label :price %><br>
        <%= f.number_field :price %>
      </div>
      <div class="field">
        <%= f.label :cover %><br>
        <%= f.file_field :cover %>
      </div>
      <div class="field">
        <%= f.label :category %>
        <%= f.collection_select :category_id, Category.all, :id, :name, :prompt => "seleccione categoria .." %>
      </div>
      <div class="actions">
        <%= f.submit %>
      </div>
    <% end %>
  </fieldset>
</div>

<script type="text/javascript">
  var editor = new EpicEditor({
    file:{
      name:"nuevo_product"
    }
  });
  editor.load();
  $("#new_product").on("submit",function() {
    $("#product_description").val(editor.exportFile("nuevo_product","html"));
  });
</script>
